@model KontrolaPoc.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h3>Criar novo Cliente</h3>


<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" placeholder="Ex: USCS - Conceição" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Cnpj" class="control-label"></label>
            <input asp-for="Cnpj" class="form-control" placeholder="Ex: 44.392.215/0001-70" />
            <span asp-validation-for="Cnpj" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Bairro" class="control-label"></label>
            <input asp-for="Bairro" class="form-control" placeholder="Ex: Santo Antônio" />
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="Cep" class="control-label"></label>
            <input asp-for="Cep" class="form-control" placeholder="Ex: 09530-060" />
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Cidade" class="control-label"></label>
            <input asp-for="Cidade" class="form-control" placeholder="Ex: São Caetano do Sul" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Logradouro" class="control-label"></label>
            <input asp-for="Logradouro" class="form-control" placeholder="Ex: Rua Conceição" />
            <span asp-validation-for="Logradouro" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="UF" class="control-label"></label>
            <input asp-for="UF" class="form-control" placeholder="Ex: SP" />
            <span asp-validation-for="UF" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <a asp-action="Index" class="btn btn-danger mr-3">Cancelar</a>
            <input type="submit" value="Criar" class="btn btn-primary mx-3" />
        </div>
    </div>

</form>

