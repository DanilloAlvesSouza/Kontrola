@model IEnumerable<KontrolaPoc.Models.Equipamento>

@{
    ViewData["Title"] = "Clientes";
}

<h4>Lista de Equipamentos</h4>
<p>
    <a class="btn btn-success" asp-action="Create">Novo equipamento</a>
    <div class="d-flex mb-3 align-items-end flex-column mb-3">
        <form class="d-flex align-items-end" asp-controller="Equipamentos" asp-action="Search" method="get">
            <input class="form-control p-2 " type="search" aria-label="Search"
                   name="searchString" value="@ViewData["searchString"]">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Potencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroSerie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Potencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EquipamentoId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.EquipamentoId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.EquipamentoId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Anterior</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Próxima</a>
        </li>
    </ul>
</nav>
