@model IEnumerable<KontrolaPoc.Models.Gravidade>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GravidadeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GravidadeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GravidadeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
