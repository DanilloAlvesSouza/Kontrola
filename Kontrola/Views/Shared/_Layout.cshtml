<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Kontrola </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kontrola.styles.css" asp-append-version="true" />
</head>
<body>
    <main class="master">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style=" background-color: #000080">
                <div class="container-fluid">
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Kontrola</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white @(ViewBag.OpcaoMenu == 1 ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            @if(User.IsInRole("Admin") || User.IsInRole("Member"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white @(ViewBag.OpcaoMenu == 2 ? "active" : "") " asp-area="" asp-controller="Chamado" asp-action="Index">Chamados</a>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white @(ViewBag.OpcaoMenu == 3 ? "active" : "") " asp-area="" asp-controller="Equipamentos" asp-action="Index">Equipamentos</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white @(ViewBag.OpcaoMenu == 5 ? "active" : "")" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                                </li>
                            }
                        </ul>
                        @await Html.PartialAsync("_LoginPartial")
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                        }
                    </div>
                </div>
            </nav>
        </header>
        <section class="Principal">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2023 - Kontrola Gestão - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @await RenderSectionAsync("Scripts", required: false)
        </section>
    </main>
</body>
</html>
